<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.citifeel.app.activity.PostActivity"
    android:weightSum="1">

    <HorizontalScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp">

        <LinearLayout
            android:id="@+id/galleryRow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/pickImage"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:adjustViewBounds="true"
                android:src="@drawable/ic_action_new"/>
            </LinearLayout>
    </HorizontalScrollView>
    <EditText
        android:id="@+id/statustextfield"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="4dp"
        android:hint="你的心情" />

    <EditText
        android:id="@+id/tagstextfield_reg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="4dp"
        android:hint="新增標籤"/>

    <EditText
        android:id="@+id/companytextfield"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="4dp"
        android:hint="公司"/>

    <EditText
        android:id="@+id/addresstextfield_reg"
        android:inputType="textEmailAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="4dp"
        android:hint="地址"/>

    <TableLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="5dp"
        android:stretchColumns="0,1">

        <TableRow android:id="@+id/TableRow01"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Spinner
                android:id="@+id/scores_spinner"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:drawSelectorOnTop="true"
                android:prompt="@string/title_scores_spinner"/>
            <Spinner
                android:id="@+id/price_spinner"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:prompt="@string/title_price_spinner"/>
        </TableRow>


        <TextView
            android:text="分享"
            android:textSize="20sp"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="4dp"
            android:layout_marginBottom="10dp"/>

        <View android:layout_height="2.5dip" android:layout_width="match_parent" android:background="#FF909090" />



        <TableRow android:id="@+id/TableRow02"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button

                android:id="@+id/share_fb_button"
                android:layout_weight="1"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:background="@drawable/cell_shape_right_bottom"
                android:text="Facebook"
                android:drawableLeft="@drawable/share_fb_logo"/>
            
            <Button

                android:id="@+id/share_twitter_button"
                android:layout_weight="1"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:paddingLeft="5dip"
                android:background="@drawable/cell_shape_bottom"
                android:text="Twitter"
                android:drawableLeft="@drawable/share_twitter_logo"/>




        </TableRow>

        <TableRow android:id="@+id/TableRow03"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button

                android:id="@+id/share_instagram_button"
                android:layout_weight="1"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:background="@drawable/cell_shape_right_bottom"
                android:text="Instagram"
                android:drawableLeft="@drawable/share_instagram_logo"/>

            <Button

                android:id="@+id/share_weibo_button"
                android:layout_weight="1"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:paddingLeft="5dip"
                android:background="@drawable/cell_shape_bottom"
                android:text="微博"
                android:drawableLeft="@drawable/share_weibo_logo"/>




        </TableRow>

    </TableLayout>


</LinearLayout>

</ScrollView>